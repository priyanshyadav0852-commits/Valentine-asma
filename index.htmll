<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Pro Camera</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto;
    }

    body {
      background: #000;
      color: #fff;
      height: 100vh;
      display: flex;
      flex-direction: column;
    }

    header {
      text-align: center;
      padding: 15px;
      font-size: 20px;
      font-weight: 600;
      letter-spacing: 1px;
    }

    video {
      width: 100%;
      height: auto;
      flex: 1;
      object-fit: cover;
      border-radius: 20px;
    }

    .controls {
      display: flex;
      justify-content: space-around;
      align-items: center;
      padding: 15px;
    }

    .btn {
      padding: 12px 22px;
      border-radius: 30px;
      border: none;
      background: #1c1c1e;
      color: #fff;
      font-size: 14px;
      cursor: pointer;
      transition: 0.3s;
    }

    .btn:hover {
      background: #2c2c2e;
    }

    .capture {
      width: 70px;
      height: 70px;
      border-radius: 50%;
      background: white;
      border: 6px solid #999;
    }

    footer {
      text-align: center;
      font-size: 12px;
      color: #aaa;
      padding-bottom: 10px;
    }
  </style>
</head>

<body>

  <header>Pro Camera</header>

  <video id="camera" autoplay playsinline></video>

  <div class="controls">
    <button class="btn">Photo</button>
    <div class="capture"></div>
    <button class="btn">Video</button>
  </div>

  <footer>Inspired by iPhone Camera UI</footer>

  <script>
    const video = document.getElementById("camera");

    navigator.mediaDevices.getUserMedia({
      video: { facingMode: "environment" },
      audio: false
    })
    .then(stream => {
      video.srcObject = stream;
    })
    .catch(err => {
      alert("Camera access denied");
      console.error(err);
    });
  </script>

</body>
</html>
